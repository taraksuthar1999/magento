<?xml version="1.0" ?>
<config>
    <modules>
        <Ccc_Order>
            <version>1.0.2</version>
        </Ccc_Order>
    </modules>
    <admin>
        <routers>
            <order>
                <use>admin</use>
                <args>
                    <module>Ccc_Order</module>
                    <frontName>order</frontName>
                </args>
            </order>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <order>
                <title>Order</title>
                <sort_order>82</sort_order>
                <children>
                    <order>
                        <title>Manage Order</title>
                        <sort_order>1</sort_order>
                        <action>order/adminhtml_order</action>
                    </order>
                </children>
            </order>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow</title>
                </all>
                <admin>
                    <children>
                        <order>
                            <title>Order Module</title>
                        </order>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <order>
                    <file>order.xml</file>
                </order>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <blocks>
            <order>
                <class>Ccc_Order_Block</class>
            </order>
        </blocks>
        <models>
            <order>
                <class>Ccc_Order_Model</class>
                <resourceModel>order_resource</resourceModel>
            </order>
            <order_resource>
                <class>Ccc_Order_Model_Resource</class>
                <entities>
                    <order>
                        <table>order</table>
                    </order>
                    <order_item>
                        <table>order_item</table>
                    </order_item>
                    <order_address>
                        <table>order_address</table>
                    </order_address>
                    <cart>
                        <table>order_cart</table>
                    </cart>
                    <cart_item>
                        <table>order_cart_item</table>
                    </cart_item>
                    <cart_address>
                        <table>order_cart_address</table>
                    </cart_address>
                </entities>
            </order_resource>
        </models>
        <resources>
            <order_setup>
                <setup>
                    <module>Ccc_Order</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </order_setup>
            <order_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </order_write>
            <order_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </order_read>
        </resources>
        <helpers>
            <order>
                <class>Ccc_Order_Helper</class>
            </order>
        </helpers>
    </global>

</config>