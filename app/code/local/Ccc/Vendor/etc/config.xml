<?xml version="1.0"?>
<config>
	<modules>
		<Ccc_Vendor>
			<version>1.0.3</version>
		</Ccc_Vendor>
	</modules>
	<frontend>
		<routers>
			<vendor>
				<use>standard</use>
				<args>
					<module>Ccc_Vendor</module>
					<frontName>vendor</frontName>
				</args>
			</vendor>
		</routers>
		<layout>
			<updates>
				<vendor>
					<file>vendor.xml</file>
				</vendor>
			</updates>
		</layout>
	</frontend>
	<global>
		<models>
			<vendor>
				<class>Ccc_Vendor_Model</class>
				<resourceModel>vendor_resource</resourceModel>
			</vendor>
			<vendor_resource>
				<class>Ccc_Vendor_Model_Resource</class>
				<entities>
					<vendor>
						<table>vendor</table>
					</vendor>
					<vendor_datetime>
						<table>vendor_datetime</table>
					</vendor_datetime>
					<vendor_decimal>
						<table>vendor_decimal</table>
					</vendor_decimal>
					<vendor_int>
						<table>vendor_int</table>
					</vendor_int>
					<vendor_text>
						<table>vendor_text</table>
					</vendor_text>
					<vendor_varchar>
						<table>vendor_varchar</table>
					</vendor_varchar>
					<vendor_char>
						<table>vendor_char</table>
					</vendor_char>
					<eav_attribute>
						<table>vendor_eav_attribute</table>
					</eav_attribute>
				</entities>
			</vendor_resource>
			<product>
				<class>Ccc_Vendor_Model</class>
				<resourceModel>product_resource</resourceModel>
			</product>
			<product_resource>
				<class>Ccc_Vendor_Model_Resource</class>
				<entities>
					<product>
						<table>product</table>
					</product>
					<product_datetime>
						<table>product_datetime</table>
					</product_datetime>
					<product_decimal>
						<table>product_decimal</table>
					</product_decimal>
					<product_int>
						<table>product_int</table>
					</product_int>
					<product_text>
						<table>product_text</table>
					</product_text>
					<product_varchar>
						<table>product_varchar</table>
					</product_varchar>
					<product_char>
						<table>product_char</table>
					</product_char>
					<eav_attribute>
						<table>product_eav_attribute</table>
					</eav_attribute>
				</entities>
			</product_resource>
			<request>
				<class>Ccc_Vendor_Model</class>
				<resourceModel>request_resource</resourceModel>
			</request>
			<request_resource>
				<class>Ccc_Vendor_Model_Resource</class>
				<entities>
					<request>
						<table>product_request</table>
					</request>
				</entities>
			</request_resource>
		</models>
		<resources>
			<vendor_setup>
				<setup>
					<module>Ccc_Vendor</module>
					<class>Ccc_Vendor_Model_Resource_Setup</class>
				</setup>
			</vendor_setup>
		</resources>
		<helpers>
			<vendor>
				<class>Ccc_Vendor_Helper</class>
			</vendor>
		</helpers>
		<blocks>
			<vendor>
				<class>Ccc_Vendor_Block</class>
			</vendor>
		</blocks>
	</global>
	<admin>
		<routers>
			<adminhtml>
				<args>
					<modules>
						<ccc_vendor>Ccc_Vendor_Adminhtml</ccc_vendor>
					</modules>
				</args>
			</adminhtml>
		</routers>
	</admin>
	<adminhtml>
		<layout>
			<updates>
				<vendor>
					<file>vendor.xml</file>
				</vendor>
			</updates>
		</layout>
	</adminhtml>
</config>
	