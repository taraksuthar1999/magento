<script type="text/javascript">
    //<![CDATA[
    var optionDefaultInputType = 'radio';

    // IE removes quotes from element.innerHTML whenever it thinks they're not needed, which breaks html.
    var templateText =
        '<tr class="option-row">' +
        <?php foreach ($this->getStores() as $_store) : ?> '<td><input name="option[value][{{id}}][<?php echo $_store->getId() ?>]" value="{{store<?php echo $_store->getId() ?>}}" style="width: 500%" class="input-text<?php if ($_store->getId() == 0) : ?> required-option<?php endif; ?>" type="text" <?php if ($this->getReadOnly()) : ?> disabled="disabled"<?php endif; ?>/><\/td>' +
